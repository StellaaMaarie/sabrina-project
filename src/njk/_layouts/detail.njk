{% extends '_layouts/base.njk' %}
{% block page_title %}Queen | {{ members.name }}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col col-m-4 col-lg-5 col-xl-4 left-rail">
      {% block info %}
        <img src=assets/img/members/{{ members.imagebw }} alt="Member image" class="member-img-fluid">
      {% endblock %}
    </div>
    <div class="col col-m-8 col-lg-7 col-xl-8">
      {% block story %}
      <h1>{{ members.name }}</h1>
      <h3>{{ members.instruments }}</h3>
      <h4>Born on {{ members.birthdate}} in {{ members.birthplace }}</h4>
      <p class="bio">{{ members.text | safe}}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}